<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DangKyChuyen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/bgde" />

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:text="Create Address"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_tinh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="TỈNH THÀNH PHỐ"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_huyen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_tinh"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="QUẬN/HUYỆN"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_xa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_huyen"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="XÃ/PHƯỜNG"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_sonha"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_xa"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="SỐ NHÀ"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_signup"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@id/edit_sonha"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/iv_signup" />
</RelativeLayout>