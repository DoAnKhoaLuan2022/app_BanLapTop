<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Person">


    <RelativeLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:background="#1a94ff">

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/iconSetting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_baseline_settings_24" />

        <ImageView
            android:id="@+id/iconCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@id/iconSetting"
            android:src="@drawable/ic_baseline_add_shopping_cart_24" />

        <!--        <TextView-->

        <!--            android:layout_width="25dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginBottom="32dp"-->
        <!--            android:background="@drawable/radiussocart"-->
        <!--            android:paddingLeft="5dp"-->
        <!--            android:text="0"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="10pt" />-->
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_above="@id/bottom_nav"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/radiusxanh" />

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/radiustrang">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_nguoidung" />

                <RelativeLayout
                    android:id="@+id/rlThongtin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_user">

                    <TextView
                        android:id="@+id/tv_webcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Chào mừng bạn đến NQ!"
                        android:textColor="@color/black"
                        android:textSize="9pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_webcome"
                        android:layout_marginTop="10dp"
                        android:text="Full Name"
                        android:textColor="@color/black"
                        android:textSize="10pt"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/kk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_user">

                    <RelativeLayout
                        android:id="@+id/icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/radiusxanhxanh"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_gg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảm giá"
                            android:textSize="7pt" />

                        <TextView
                            android:id="@+id/tv_timThem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_gg"
                            android:layout_marginTop="10dp"
                            android:text="Tìm thêm"
                            android:textColor="@color/black"
                            android:textSize="7pt" />

                        <ImageView
                            android:id="@+id/iv_gg"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@id/tv_timThem1"
                            android:src="@drawable/giamgia" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/icon1"
                        android:background="@drawable/radiusvangvang"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_heo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tiết kiệm"
                            android:textSize="7pt" />

                        <TextView
                            android:id="@+id/tv_timThem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_heo"
                            android:layout_marginTop="10dp"
                            android:text="Tìm thêm"
                            android:textColor="@color/black"
                            android:textSize="7pt" />

                        <ImageView
                            android:id="@+id/iv_heo"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/tv_timThem2"
                            android:src="@drawable/heo" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/icon2"
                        android:background="@drawable/radiustrangxam"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_dt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Astra"
                            android:textSize="7pt" />

                        <TextView
                            android:id="@+id/tv_timThem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_dt"
                            android:layout_marginTop="10dp"
                            android:text="Tìm thêm"
                            android:textColor="@color/black"
                            android:textSize="7pt" />

                        <ImageView
                            android:id="@+id/iv_dt"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@id/tv_timThem"
                            android:src="@drawable/dt" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlProfile">

                <TextView
                    android:id="@+id/ttDonHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Đơn hàng của tôi"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/icon4"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/iv_ChoXacnhan"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/choxacnhan" />

                    <ImageView
                        android:id="@+id/iv_ChoLayHang"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/iv_ChoXacnhan"
                        android:src="@drawable/cholayhang" />

                    <ImageView
                        android:id="@+id/iv_DangGiao"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/iv_ChoLayHang"
                        android:src="@drawable/danggiao" />

                    <ImageView
                        android:id="@+id/iv_DanhGia"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/iv_DangGiao"
                        android:src="@drawable/danhgia" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDonhangDaGiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDonhang">

                <TextView
                    android:id="@+id/ttDonHangDaGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Đơn hàng đã giao"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconDG"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDonhangThanhCong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDonhangDaGiao">

                <TextView
                    android:id="@+id/ttDonHangThanhCong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Đơn hàng thành công"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconHT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDonhangHuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDonhangThanhCong">

                <TextView
                    android:id="@+id/ttDonHangHuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Đơn hàng hủy"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconH"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDonhangTraLai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDonhangHuy">

                <TextView
                    android:id="@+id/ttDonHangTraLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Đơn hàng trả lại"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconTL"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTramDV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDonhangTraLai">

                <TextView
                    android:id="@+id/ttDV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Trạm dịch vụ tiện ích"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/icon"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:auto_cycle="true"
                    app:corner_radius="20"
                    app:delay="0"
                    app:error_image="@color/purple_200"
                    app:period="3000"
                    app:placeholder="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTramDV">

                <TextView
                    android:id="@+id/ttAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Địa chỉ giao hàng"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconAd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlHoTro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlAddress">

                <TextView
                    android:id="@+id/ttHoTro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="Trung tâm hỗ trợ"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconHoTro"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24_lui" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>