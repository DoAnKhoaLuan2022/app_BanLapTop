<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/bgde" />
    <TextView
        android:id="@+id/textView"
        android:layout_below="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewafter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="30dp"
        android:text="Please sign in to continue."
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtEmail_Dangnhap"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/textViewafter"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPassword_Dangnhap"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/edtEmail_Dangnhap"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@id/edtPassword_Dangnhap"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/iv_login" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_login"
        android:layout_alignParentBottom="true"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv_cauhoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:text="Don't have an account?"
            android:textSize="20sp"
            android:textStyle="bold" />

<!--        <TextView-->
<!--            android:id="@+id/txt_dangkidn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/tv_cauhoi"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:text="Sign up"-->
<!--            android:textColor="#F1C404"-->
<!--            android:textSize="25sp"-->
<!--            android:textStyle="bold" />-->
    </RelativeLayout>
    <ImageView
        android:id="@+id/chuyentrangdangki1"
        android:layout_width="40dp"
        android:layout_height="126dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:src="@drawable/icon_add_img_login"
         />
</RelativeLayout>